
unit ObispoForm;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, ObispoNumero, Vcl.Menus, Vcl.StdCtrls;

Type

  TForm1 = class(TForm)

    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    ObMenu: TMainMenu;
    ProcedimientosNumero1: TMenuItem;
    ProcedimientosNumero2: TMenuItem;
    SetValue1: TMenuItem;
    SetValue2: TMenuItem;
    EliminarPosicin1: TMenuItem;
    EliminarPosicin2: TMenuItem;
    Insertar1: TMenuItem;
    Modificar: TMenuItem;
    SepararPares1: TMenuItem;
    OrdenarAscendente: TMenuItem;
    OrdenarDescendente: TMenuItem;
    GetValue1: TMenuItem;
    Digito: TMenuItem;
    NumerodeDigitos: TMenuItem;
    SumaDigitos: TMenuItem;
    NumeroMayor: TMenuItem;
    NumeroMenor: TMenuItem;
    Frecuencia: TMenuItem;
    Conversor: TMenuItem;
    Romano: TMenuItem;

    {Procedimientos Numero}
    procedure FormCreate(Sender: TObject);
    procedure SetValue1Click(Sender: TObject);
    procedure SetValue2Click(Sender: TObject);
    procedure EliminarPosicin1Click(Sender: TObject);
    procedure EliminarPosicin2Click(Sender: TObject);
    procedure Insertar1Click(Sender: TObject);
    procedure ModificarClick(Sender: TObject);
    procedure SepararPares1Click(Sender: TObject);
    procedure OrdenarAscendenteClick(Sender: TObject);
    procedure OrdenarDescendenteClick(Sender: TObject);

    {Funciones Numero}
    procedure GetValue1Click(Sender: TObject);
    procedure DigitoClick(Sender: TObject);
    procedure NumerodeDigitosClick(Sender: TObject);
    procedure SumaDigitosClick(Sender: TObject);
    procedure NumeroMayorClick(Sender: TObject);
    procedure NumeroMenorClick(Sender: TObject);
    procedure FrecuenciaClick(Sender: TObject);
    procedure ConversorClick(Sender: TObject);
    procedure RomanoClick(Sender: TObject);

  Private

    number : Numero;

  Public

  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

{Constructor Formulario}
procedure TForm1.FormCreate(Sender: TObject);
begin
  number := Numero.Create;
end;

{Procedimientos Numero}

procedure TForm1.SetValue1Click(Sender: TObject);
begin
  number.SetValue(StrToInt(Edit1.Text));
end;

procedure TForm1.SetValue2Click(Sender: TObject);
begin
  number.Anadir(StrToInt(Edit3.Text));
end;

procedure TForm1.EliminarPosicin1Click(Sender: TObject);
begin
  number.EliminarPos(StrToInt(Edit2.Text));
end;

procedure TForm1.EliminarPosicin2Click(Sender: TObject);
begin
  number.EliminarDig(StrToInt(Edit3.Text));
end;

procedure TForm1.Insertar1Click(Sender: TObject);
begin
  number.Insertar(StrToInt(Edit3.Text),StrToInt(Edit2.Text));
end;

procedure TForm1.ModificarClick(Sender: TObject);
begin
  number.Modificar(StrToInt(Edit3.Text),StrToInt(Edit2.Text));
end;

procedure TForm1.SepararPares1Click(Sender: TObject);
begin
  number.SeparaPares;
end;

procedure TForm1.OrdenarAscendenteClick(Sender: TObject);
begin
  number.OrdenAscendente;
end;

procedure TForm1.OrdenarDescendenteClick(Sender: TObject);
begin
  number.OrdenDescendente;
end;

{Funciones Numero}

procedure TForm1.GetValue1Click(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.GetValue);
end;

procedure TForm1.DigitoClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.Digito(StrToInt(Edit2.Text)));
end;

procedure TForm1.NumerodeDigitosClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.NumDig);
end;

procedure TForm1.SumaDigitosClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.SumaDigitos);
end;

procedure TForm1.NumeroMayorClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.NumMayor);
end;

procedure TForm1.NumeroMenorClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.NumMenor);
end;

procedure TForm1.FrecuenciaClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.Frecuencia(StrToInt(Edit3.Text)));
end;

procedure TForm1.ConversorClick(Sender: TObject);
begin
  Label4.Caption := number.Conversor(StrToInt(Edit3.Text));
end;

procedure TForm1.RomanoClick(Sender: TObject);
begin
  Label4.Caption := number.Romano;
end;


end.
