
unit ObispoForm;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, ObispoNumero, ObispoCadena, Vcl.Menus, Vcl.StdCtrls;

Type

  TForm1 = class(TForm)

    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    ObMenu: TMainMenu;
    ProcedimientosNumero1: TMenuItem;
    ProcedimientosNumero2: TMenuItem;
    SetValue1: TMenuItem;
    SetValue2: TMenuItem;
    EliminarPosicin1: TMenuItem;
    EliminarPosicin2: TMenuItem;
    Insertar1: TMenuItem;
    Modificar: TMenuItem;
    SepararPares1: TMenuItem;
    OrdenarAscendente: TMenuItem;
    OrdenarDescendente: TMenuItem;
    GetValue1: TMenuItem;
    Digito: TMenuItem;
    NumerodeDigitos: TMenuItem;
    SumaDigitos: TMenuItem;
    NumeroMayor: TMenuItem;
    NumeroMenor: TMenuItem;
    Frecuencia: TMenuItem;
    Conversor: TMenuItem;
    Romano: TMenuItem;
    ProcedimientosCadena1: TMenuItem;
    ProcedimientosCadena2: TMenuItem;
    SetCadena1: TMenuItem;
    Anadir: TMenuItem;
    ModificarCadena: TMenuItem;
    InsertarCadena: TMenuItem;
    EliminarCadena: TMenuItem;
    EliminarCaracterCadena: TMenuItem;
    GetLongitud: TMenuItem;
    GetCaracter: TMenuItem;
    GetCadena: TMenuItem;
    BuscarCaracter: TMenuItem;
    FrecuenciaCaracter: TMenuItem;
    MayorFrecuencia: TMenuItem;
    NumeroPalabras: TMenuItem;
    PalabraNumero: TMenuItem;
    Edit4: TEdit;
    Edit5: TEdit;
    Edit6: TEdit;
    Label5: TLabel;
    Label6: TLabel;
    Label7: TLabel;
    Label8: TLabel;
    SiguientePalabra: TMenuItem;
    Parcialito1: TMenuItem;
    ADecimal: TMenuItem;
    MayorLongitud: TMenuItem;
    MayorValor: TMenuItem;
    SumaNumeros: TMenuItem;

    {Procedimientos Numero}
    procedure FormCreate(Sender: TObject);
    procedure SetValue1Click(Sender: TObject);
    procedure SetValue2Click(Sender: TObject);
    procedure EliminarPosicin1Click(Sender: TObject);
    procedure EliminarPosicin2Click(Sender: TObject);
    procedure Insertar1Click(Sender: TObject);
    procedure ModificarClick(Sender: TObject);
    procedure SepararPares1Click(Sender: TObject);
    procedure OrdenarAscendenteClick(Sender: TObject);
    procedure OrdenarDescendenteClick(Sender: TObject);

    {Funciones Numero}
    procedure GetValue1Click(Sender: TObject);
    procedure DigitoClick(Sender: TObject);
    procedure NumerodeDigitosClick(Sender: TObject);
    procedure SumaDigitosClick(Sender: TObject);
    procedure NumeroMayorClick(Sender: TObject);
    procedure NumeroMenorClick(Sender: TObject);
    procedure FrecuenciaClick(Sender: TObject);
    procedure ConversorClick(Sender: TObject);
    procedure RomanoClick(Sender: TObject);
