  Private

    number : Numero;
    chain : Cadena;

  Public

  end;

var
  Form1: TForm1;
  t: Word;

implementation

{$R *.dfm}

{Constructor Formulario}
procedure TForm1.FormCreate(Sender: TObject);
begin
  number := Numero.Create;
  chain := Cadena.Create;
  t := 1;
end;

{Procedimientos Numero}

procedure TForm1.SetValue1Click(Sender: TObject);
begin
  number.SetValue(StrToInt(Edit1.Text));
end;

procedure TForm1.SetValue2Click(Sender: TObject);
begin
  number.Anadir(StrToInt(Edit3.Text));
end;

procedure TForm1.EliminarPosicin1Click(Sender: TObject);
begin
  number.EliminarPos(StrToInt(Edit2.Text));
end;

procedure TForm1.EliminarPosicin2Click(Sender: TObject);
begin
  number.EliminarDig(StrToInt(Edit3.Text));
end;

procedure TForm1.Insertar1Click(Sender: TObject);
begin
  number.Insertar(StrToInt(Edit3.Text),StrToInt(Edit2.Text));
end;

procedure TForm1.ModificarClick(Sender: TObject);
begin
  number.Modificar(StrToInt(Edit3.Text),StrToInt(Edit2.Text));
end;

procedure TForm1.SepararPares1Click(Sender: TObject);
begin
  number.SeparaPares;
end;

procedure TForm1.OrdenarAscendenteClick(Sender: TObject);
begin
  number.OrdenAscendente;
end;

procedure TForm1.OrdenarDescendenteClick(Sender: TObject);
begin
  number.OrdenDescendente;
end;

{Funciones Numero}

procedure TForm1.GetValue1Click(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.GetValue);
end;

procedure TForm1.DigitoClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.Digito(StrToInt(Edit2.Text)));
end;

procedure TForm1.NumerodeDigitosClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.NumDig);
end;

procedure TForm1.SumaDigitosClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.SumaDigitos);
end;

procedure TForm1.NumeroMayorClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.NumMayor);
end;

procedure TForm1.NumeroMenorClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.NumMenor);
end;

procedure TForm1.FrecuenciaClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.Frecuencia(StrToInt(Edit3.Text)));
end;

procedure TForm1.ConversorClick(Sender: TObject);
begin
  Label4.Caption := number.Conversor(StrToInt(Edit3.Text));
end;

procedure TForm1.RomanoClick(Sender: TObject);
begin
  Label4.Caption := number.Romano;
end;

procedure TForm1.ADecimalClick(Sender: TObject);
begin
  Label4.Caption := IntToStr(number.ToDecim(Edit1.Text,StrToInt(Edit2.Text)));
end;

{Procedimientos Cadena}

procedure TForm1.SetCadena1Click(Sender: TObject);
begin
  chain.SetCadena(Edit4.Text);
end;

procedure TForm1.AnadirClick(Sender: TObject);
begin
  chain.Anadir(Edit6.Text[1]);
end;

procedure TForm1.ModificarCadenaClick(Sender: TObject);
begin
  chain.Modificar(StrToInt(Edit5.Text),Edit6.Text[1]);
end;

procedure TForm1.InsertarCadenaClick(Sender: TObject);
begin
  chain.Insertar(StrToInt(Edit5.Text),Edit6.Text[1]);
end;

procedure TForm1.EliminarCadenaClick(Sender: TObject);
begin
  chain.Eliminar(StrToInt(Edit5.Text));
end;

procedure TForm1.EliminarCaracterCadenaClick(Sender: TObject);
begin
  chain.EliminarChar(Edit6.Text[1]);
end;

{Funciones Cadena}

procedure TForm1.GetLongitudClick(Sender: TObject);
begin
  Label8.Caption := IntToStr(chain.GetLong);
end;

procedure TForm1.GetCaracterClick(Sender: TObject);
begin
  Label8.Caption := chain.GetChar(StrToInt(Edit5.Text));
end;

procedure TForm1.GetCadenaClick(Sender: TObject);
begin
  Label8.Caption := chain.GetCadena;
end;

procedure TForm1.BuscarCaracterClick(Sender: TObject);
begin
  Label8.Caption := IntToStr(chain.BuscarChar(Edit6.Text[1]));
end;

procedure TForm1.FrecuenciaCaracterClick(Sender: TObject);
begin
  Label8.Caption := IntToStr(chain.FrecuenciaChar(Edit6.Text[1]));
end;

procedure TForm1.MayorFrecuenciaClick(Sender: TObject);
begin
  Label8.Caption := chain.MayorFrec;
end;

procedure TForm1.NumeroPalabrasClick(Sender: TObject);
begin
  Label8.Caption := IntToStr(chain.NumPal);
end;

procedure TForm1.PalabraNumeroClick(Sender: TObject);
begin
  Label8.Caption := chain.Palabra(StrToInt(Edit6.Text));
end;

procedure TForm1.SiguientePalabraClick(Sender: TObject);
begin
  Label8.Caption := chain.SiguientePalabra(t);
end;

procedure TForm1.MayorLongitudClick(Sender: TObject);
begin
  Label8.Caption := chain.MayorLongitud;
end;

procedure TForm1.MayorValorClick(Sender: TObject);
begin
  Label8.Caption := chain.MayorValor;
end;

procedure TForm1.SumaNumerosClick(Sender: TObject);
begin
  Label8.Caption := chain.SumaNumeros(StrToInt(Edit5.Text));
end;

end.
